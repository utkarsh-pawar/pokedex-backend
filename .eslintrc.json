{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      2,
      "double",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ],
    "semi": [
      {
        "always": true
      }
    ],
    "prefer-reflect": ["error", { "exceptions": ["preventExtension"] }]
  }
}
